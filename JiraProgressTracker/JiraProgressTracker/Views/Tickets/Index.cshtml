@model IEnumerable<JiraProgressTracker.Models.Ticket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@Html.ActionLink("New Ticket","AddTicket", "Tickets",htmlAttributes: new { @class = "btn btn-primary" })
<br />
<br />
<table class="table">
    <tr>
        <th>
            Ticket Number
        </th>
        <th>
            Description
        </th>
        <th>
            Ticket Type
        </th>
        <th>
            Status
        </th>
        <th>

        </th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>
            <a href="@item.JiraLink" target="_blank">@item.TicketNumber</a>
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @item.TicketType.Name
        </td>
        <td>
            @item.Status.Name
        </td>
        <td>
            @Html.ActionLink("Edit", "AddTicket", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("View Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
    }
</table>

